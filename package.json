{
  "name": "plain-react",
  "license": "MIT",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "author": {
    "name": "ray",
    "email": "leiwenpeng1994@outlook.com"
  },
  "homepage": "https://github.com/leiwenpeng0424/plain-react",
  "keywords": [
    "react",
    "in",
    "typescript"
  ],
  "workspaces": [
    "packages/*",
    "shared/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    },
    "skipCI": true
  },
  "lint-staged": {
    "packages/**/*.ts": [
      "prettier packages/**/*.ts --write",
      "eslint"
    ]
  },
  "devDependencies": {
    "@babel/cli": "~7.12.1",
    "@babel/core": "~7.12.3",
    "@babel/preset-env": "~7.12.1",
    "@rollup/plugin-alias": "~3.1.1",
    "@rollup/plugin-commonjs": "~16.0.0",
    "@rollup/plugin-json": "~4.1.0",
    "@rollup/plugin-node-resolve": "~10.0.0",
    "@rollup/plugin-replace": "~2.3.4",
    "@rollup/plugin-sucrase": "~3.1.0",
    "@rollup/plugin-typescript": "~6.1.0",
    "@typescript-eslint/eslint-plugin": "~4.6.0",
    "@typescript-eslint/parser": "~4.6.0",
    "babel-jest": "~26.6.1",
    "eslint": "~7.12.1",
    "eslint-config-prettier": "~6.14.0",
    "eslint-plugin-prettier": "~3.1.4",
    "glob": "~7.1.6",
    "husky": "~4.3.0",
    "jest": "~26.6.1",
    "lint-staged": "~10.5.0",
    "minimist": "~1.2.5",
    "prettier": "~2.1.2",
    "rollup": "~2.32.1",
    "rollup-plugin-terser": "~7.0.2",
    "ts-jest": "~26.4.3",
    "tslib": "^2.0.3",
    "typescript": "~4.0.5"
  },
  "scripts": {
    "lint": "eslint --fix",
    "test": "jest -c='./scripts/jest/jest.config.js' --passWithNoTests",
    "prettier": "prettier --write",
    "build:dev": "rollup -c='./scripts/rollup/rollup.config.js' --development",
    "build:prod": "rollup -c='./scripts/rollup/rollup.config.js' --production",
    "dev": "rollup -c='./scripts/rollup/rollup.config.js'  --watch --development"
  }
}
