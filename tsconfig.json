{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "allowJs": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "importHelpers": false,
    "strictNullChecks": true,
    "sourceMap": true,
    "pretty": true
  },
  "exclude": ["node_modules", "scripts", "eslint", "**/dist/**"]
}
