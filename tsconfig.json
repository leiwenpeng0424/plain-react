{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "target": "ESNext",
    "noEmit": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["packages/core/*"],
      "@renderer/*": ["packages/renderer/*"]
    }
  },
  "include": ["packages"]
}
